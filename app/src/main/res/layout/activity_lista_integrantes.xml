<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="matallana.alejandro.proyectofinalandroid1.Vista.ListaIntegrantesActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtInformacionListaIntegrantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuarios agregados al proyecto como integrantes" />

    <ListView
        android:id="@+id/lstListaIntegrantes"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnAgregarNuevoIntegrante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Nuevo Integrante"
        android:onClick="abrirAgregarNuevoIntegrante"/>
</LinearLayout>
