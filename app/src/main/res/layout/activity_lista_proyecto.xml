<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="matallana.alejandro.proyectofinalandroid1.Vista.ListaProyectoActivity">

    <EditText
        android:id="@+id/txtBuscarProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Buscar Proyecto Por Nombre"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBuscarProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Proyecto"
        android:onClick="listaBuscarProyectos"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione un proyecto" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="346dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lstListaProyectos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCrearNuevoProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Nuevo Proyecto"
        android:onClick="abrirCrearNuevoProyecto"/>

</LinearLayout>
